@{
    ViewBag.Title = "Home Page";
}

    <div class="row">
        <div class="col-md-9">
            <div class="product-props-inf">
                <img src="~/img/VanGogh.jpg" />
                <h3>Mug</h3>
                <ul class="product-props">
                    <li>Price: $9.99</li>
                    <li>Artist: Van Gogh</li>
                    <li>Title</li>
                    <li>Description: Self-portrait</li>
                </ul>
                <button id="buybutton" class="btn btn-success">Buy</button>
            </div>

            <div id="theform">
                <form>
                    <label>Username:</label>
                    <br />
                    <input style="font-size:18px; width:200px;" />
                    <br />
                    <label>Password:</label>
                    <br />
                    <input type="password" />
                    <br />
                    <label>Email:</label>
                    <br />
                    <input type="email" />
                    <br />
                    <label>Subject:</label>
                    <br />
                    <input type="text" />
                    <br />
                    <label>Message:</label>
                    <br />
                    <textarea rows="4"></textarea>
                    <br />
                    <input type="submit" value="Send Message" />
                </form>
            </div>
            <div>
                <div id="loginToggle">Login</div>
                <form class="popup-form">
                    <div>
                        <label>Username</label>
                        <input />
                    </div>
                    <div>
                        <label>Password</label>
                        <input type="password" />
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Remember me?</label>
                    </div>
                    <input type="submit" value="Login" />
                </form>
            </div>
        </div>
    <div class="col-md-3"></div>
        <p>This is a fun to do some buying of dutch products.</p>
    </div>
